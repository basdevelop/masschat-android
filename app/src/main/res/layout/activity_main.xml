<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="true"
                android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/button1"
                style="@style/main_radiobtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:checked="true"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/tab_f1_bg"
                android:text="周围"
                android:textColor="#666666"
                android:textSize="10sp"/>

            <RadioButton
                android:id="@+id/button2"
                style="@style/main_radiobtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/tab_f2_bg"
                android:text="众信"
                android:textColor="#666666"
                android:textSize="10sp"/>

            <RadioButton
                android:id="@+id/button3"
                style="@style/main_radiobtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/tab_f3_bg"
                android:text="传文件"
                android:textColor="@color/themecolor"
                android:textSize="10sp"/>


            <RadioButton
                android:id="@+id/button4"
                style="@style/main_radiobtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="-5dp"
                android:drawableTop="@drawable/tab_f4_bg"
                android:text="我的"
                android:textColor="#666666"
                android:textSize="10sp"/>


        </RadioGroup>

    </RelativeLayout>

    <View
        android:id="@+id/ll_line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/bottom"
        android:background="#e3e3e3"
        />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_line3"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>