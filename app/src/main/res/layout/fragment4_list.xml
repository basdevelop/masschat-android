<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_gray"
              android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_status_bar"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/login_tv_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:text="完成"
                        android:textColor="@color/themecolor"
                        android:textSize="16sp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/login_btn_back"
                        style="@style/wightw_heightw"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15dp"
                        android:src="@mipmap/nav_bg"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="@string/login"
                        android:textColor="@color/white"
                        android:textSize="17sp"/>

                    <ImageView
                        android:id="@+id/login_btn_right"
                        style="@style/wightw_heightw"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="15dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/login_tv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="10dp"
                        android:text="完成"
                        android:textColor="@color/themecolor"
                        android:textSize="16sp"
                        android:visibility="gone"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                   />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="赵丽莉"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="123-456-789"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:text="个性签名：你好你好你好你好年号年号"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        />

                    <ImageView
                        android:id="@+id/iv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@mipmap/edit_ic"
                        />


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_music"
                style="@style/wightm_heightw"
                android:background="@drawable/my_click_bg"
                android:paddingLeft="15dp"
                android:clickable="true"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv1"
                    style="@style/wightw_heightw"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/music_ic"/>

                <TextView
                    style="@style/wightw_heightw"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv1"
                    android:text="音乐"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <View
                style="@style/sty_divider"
                />

            <RelativeLayout
                android:id="@+id/rl_video"
                style="@style/wightm_heightw"
                android:clickable="true"
                android:background="@drawable/my_click_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv2"
                    style="@style/wightw_heightw"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/vedio_ic"/>

                <TextView
                    style="@style/wightw_heightw"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv2"
                    android:text="视频"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <View
                style="@style/sty_divider"
                />

            <RelativeLayout
                android:id="@+id/rl_picture"
                style="@style/wightm_heightw"
                android:clickable="true"
                android:background="@drawable/my_click_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv3"
                    style="@style/wightw_heightw"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/image_ic"/>

                <TextView
                    style="@style/wightw_heightw"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv3"
                    android:text="图片"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <View
                style="@style/sty_divider"
                />

            <RelativeLayout
                android:id="@+id/rl_file"
                style="@style/wightm_heightw"
                android:background="@drawable/my_click_bg"
                android:paddingLeft="15dp"
                android:clickable="true"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv4"
                    style="@style/wightw_heightw"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/file_ic"/>

                <TextView
                    style="@style/wightw_heightw"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv4"
                    android:text="文档"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <View
                style="@style/sty_divider"
                />

            <View
                style="@style/sty_divider"
                android:layout_marginTop="10dp"
                />

            <RelativeLayout
                android:id="@+id/rl_wechat"
                style="@style/wightm_heightw"
                android:background="@drawable/my_click_bg"
                android:paddingLeft="15dp"
                android:clickable="true"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv5"
                    style="@style/wightw_heightw"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/wechat_ic"/>

                <TextView
                    style="@style/wightw_heightw"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv5"
                    android:text="关联微信"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <View
                style="@style/sty_divider"
                />

            <View
                style="@style/sty_divider"
                android:layout_marginTop="10dp"
                />

            <RelativeLayout
                android:id="@+id/rl_exit"
                android:clickable="true"
                style="@style/wightm_heightw"
                android:background="@drawable/my_click_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:id="@+id/iv6"
                    style="@style/wightw_heightw"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:src="@mipmap/exit_ic"/>

                <TextView
                    style="@style/wightw_heightw"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv6"
                    android:text="退出登录"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <View
                style="@style/sty_divider"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
